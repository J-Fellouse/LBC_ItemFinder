<UserControl x:Class="ItemFinder_WPF.MyUserControls.IFLargeTextboxIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemFinder_WPF.MyUserControls"
             xmlns:customControls="clr-namespace:ItemFinder_WPF.MyCustomControls"
             mc:Ignorable="d" x:Name="MyIFLargeTextboxIcon">
    <Grid>
        <customControls:IFLargeTextbox x:Name="MyTextBox" Text="{Binding Placeholder, ElementName=MyIFLargeTextboxIcon}" GotFocus="IFLargeTextbox_GotFocus"></customControls:IFLargeTextbox>
        <Path Grid.Column="1" Width="38" Height="38" HorizontalAlignment="Right" Fill="#828282" Stroke="#828282" Data="{Binding Icon, ElementName=MyIFLargeTextboxIcon}" Margin="0,0,10,0"/>
    </Grid>
</UserControl>
