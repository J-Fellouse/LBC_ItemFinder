<UserControl x:Class="ItemFinder_WPF.MyUserControls.IFMultilineTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemFinder_WPF.MyUserControls"
             mc:Ignorable="d" x:Name="MyIFMultilineTextbox"
             xmlns:customControls="clr-namespace:ItemFinder_WPF.MyCustomControls"
             >
    <customControls:IFMultilineTextbox x:Name="MyTextBox" FontSize="22" Text="{Binding Placeholder, ElementName=MyIFMultilineTextbox}" GotFocus="MyTextBox_GotFocus"></customControls:IFMultilineTextbox>
</UserControl>
