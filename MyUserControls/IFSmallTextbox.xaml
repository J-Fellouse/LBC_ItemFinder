<UserControl x:Class="ItemFinder_WPF.MyUserControls.IFSmallTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemFinder_WPF.MyUserControls"
             mc:Ignorable="d" 
             xmlns:customControls="clr-namespace:ItemFinder_WPF.MyCustomControls" x:Name="MyIFSmallTextbox">
    <customControls:IFSmallTextbox x:Name="MyTextBox" Text="{Binding Placeholder, ElementName=MyIFSmallTextbox}" VerticalContentAlignment="Center" GotFocus="MyTextBox_GotFocus"></customControls:IFSmallTextbox>
</UserControl>
