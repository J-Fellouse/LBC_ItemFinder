<UserControl x:Class="ItemFinder_WPF.MyUserControls.IFMainTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemFinder_WPF.MyUserControls"
             xmlns:customControls="clr-namespace:ItemFinder_WPF.MyCustomControls"
             mc:Ignorable="d" x:Name="MyIFMainTitle" UseLayoutRounding="True">
    <Grid>
        <StackPanel Orientation="Vertical">
            <customControls:Headline1 Text="{Binding Text, ElementName=MyIFMainTitle}" TextAlignment="Center"></customControls:Headline1>
            <Image Source="{Binding Underline, ElementName=MyIFMainTitle}" VerticalAlignment="Center" Stretch="None" Margin="0,-8,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
